<%- include('fixedParts/head.ejs') %>
<link rel="stylesheet" href="/css/addproduct.css">
<title> Add Product</title>
 </head>

  <body>
    <%- include('fixedParts/header.ejs') %>
      </header>
      <div class="">
        <form action="/vendor/addProduct/" method="post" name="product-creator" id="product-creator"
          enctype="multipart/form-data">
          <div class="form-group p-1">
            <% if(isSubmitted){ %>
              <small class="text-success">
                Product added
              </small>
              <br>
              <% } %>
                <legend class="addnew">Add New Product</legend>
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="name" aria-describedby="nameHelp"
                >
                <small class="error-message form-text text-danger"></small>
          </div>
          <div class="form-group">
            <label for="price">Price</label>
            <input type="number" class="form-control" id="price" name="price">
            <small class="error-message form-text text-danger"></small>
          </div>
          <div class="form-group">
            <label for="category">Category</label>
            <select name="category" id="category">
              <% for(let key in categories) { %>
                <option value=<%=key%>><%=categories[key]%>
                </option>
                <% } %>
            </select>
          </div>
          <div class="form-group">
            <label for="image">Image</label>
            <input type="file" class="form-control" id="image" name="image" accept="image/png, image/jpeg, image/webp"
              enctype="multipart/form-data">
          </div>
          <div class="form-group">
            <label for="Name">Description</label>
            <textarea class="form-control" id="description" name="description" placeholder="Description"
              maxlength="500"></textarea>
            <small class="error-message form-text"></small>
          </div>
          <div class="container mt-2 d-flex justify-content-evenly">
            <button type="submit" class="btn">Submit</button>
            <button type="reset" class="btn">Reset</button>
          </div>
        </form>
      </div>
      <img src="/css/logo.png" class="image">
        <script src="/js/productConditions.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
